{% extends 'base.html.twig' %}

{% block title %}Notre équipe{% endblock %}

{% block body %}
    <section class="w-full max-w-6xl mx-auto px-4 py-10">
        <h1 class="text-3xl md:text-4xl font-bold text-center mb-12">
            Notre équipe pédagogique
        </h1>

        {# Carousel Swiper responsive #}
        <div data-controller="carousel"
             class="swiper relative"
             data-carousel-options-value='{
             "loop": true,
             "slidesPerView": 1,
             "spaceBetween": 20,
             "pagination": { "el": ".swiper-pagination", "clickable": true },
             "navigation": { "nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev" },
             "breakpoints": {
                 "640": { "slidesPerView": 1 },
                 "768": { "slidesPerView": 2 },
                 "1024": { "slidesPerView": 3 }
             }
         }'>

            <div class="swiper-wrapper flex gap-4 overflow-x-auto snap-x snap-mandatory">
                {% for post in posts %}
                    <div class="swiper-slide flex-none snap-center w-72 md:w-auto flex flex-col justify-center items-center bg-white rounded-2xl shadow-lg p-6 transition-transform duration-300 hover:scale-105">
                        <img src="{{ asset('images/' ~ post.image) }}"
                             alt="{{ post.title }}"
                             class="w-40 h-40 md:w-48 md:h-48 object-cover rounded-xl shadow-md mb-4">
                        <h2 class="text-xl md:text-2xl font-semibold text-center mb-2">
                            {{ post.title }}
                        </h2>
                        <p class="text-gray-700 text-center text-sm md:text-base leading-relaxed">
                            {{ post.content }}
                        </p>
                    </div>
                {% endfor %}
            </div>

            {# Pagination et navigation #}
            <div class="swiper-pagination z-50 mt-6"></div>
            <div class="swiper-button-prev z-50 cursor-pointer"></div>
            <div class="swiper-button-next z-50 cursor-pointer"></div>
        </div>
    </section>
{% endblock %}
