{% extends 'base.html.twig' %}

{% block title %}Notre équipe{% endblock %}

{% block body %}
    <section class="max-w-6xl mx-auto px-4 py-10">
        <h1 class="text-3xl font-bold text-center mb-12">Notre équipe pédagogique</h1>

        <div data-controller="carousel" class="swiper relative"
             data-carousel-options-value='{
             "loop": true,
             "slidesPerView": 1,
             "spaceBetween": 20,
             "pagination": { "el": ".swiper-pagination", "clickable": true },
             "navigation": { "nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev" },
             "breakpoints": {
                 "640": { "slidesPerView": 1 },
                 "768": { "slidesPerView": 2 },
                 "1024": { "slidesPerView": 3 }
             }
         }'>
            <div class="swiper-wrapper">
                {% for post in posts %}
                    <div class="swiper-slide flex flex-col justify-center items-center bg-white rounded-xl shadow-md p-6">
                        <img src="{{ asset('images/' ~ post.image) }}" alt="{{ post.title }}"
                             class="w-48 h-48 object-cover rounded-xl shadow-md mb-4">
                        <h2 class="text-2xl font-semibold text-center">{{ post.title }}</h2>
                        <p class="text-gray-700 leading-relaxed text-center">{{ post.content }}</p>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination et navigation -->
            <div class="swiper-pagination z-50 mt-4"></div>
            <div class="swiper-button-prev z-50 cursor-pointer"></div>
            <div class="swiper-button-next z-50 cursor-pointer"></div>
        </div>
    </section>
{% endblock %}
