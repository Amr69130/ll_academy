{% extends 'base.html.twig' %}

{% block title %}Notre équipe{% endblock %}

{% block body %}
    <section class="max-w-6xl mx-auto px-4 py-10">
        <h1 class="text-3xl font-bold text-center mb-12">Notre équipe pédagogique</h1>

        {% set professors = [
            { name: 'Emma Thompson', levels: 'Anglais - A1 & A2', description: "Emma enseigne l’anglais aux niveaux débutants A1 et A2 avec une approche chaleureuse et bienveillante...", photo: 'emma_thompson.jpg' },
            { name: 'James Carter', levels: 'Anglais - B1 & B2', description: "James accompagne les élèves de niveaux intermédiaires B1 et B2 dans leur progression...", photo: 'james_carter.jpg' },
            { name: 'Giulia Moretti', levels: 'Italien - A1 & A2', description: "Giulia initie ses élèves à la langue italienne en alliant rigueur et convivialité...", photo: 'giulia_moretti.jpg' },
            { name: 'Luca Bianchi', levels: 'Italien - B1 & B2', description: "Luca enseigne l’italien aux apprenants de niveaux intermédiaires...", photo: 'luca_bianchi.jpg' },
            { name: 'Layla Al-Fahad', levels: 'Arabe - A1 & A2', description: "Layla accompagne les débutants dans leur apprentissage de l’arabe littéral avec patience et clarté...", photo: 'layla_al_fahad.jpg' },
            { name: 'Omar Hassan', levels: 'Arabe - B1 & B2', description: "Omar aide les étudiants à approfondir leur compréhension de l’arabe...", photo: 'omar_hassan.jpg' },
            { name: 'Maria González', levels: 'Espagnol - A1 & A2', description: "Maria propose un enseignement vivant et interactif de l’espagnol...", photo: 'maria_gonzales.jpg' },
            { name: 'Carlos Ruiz', levels: 'Espagnol - B1 & B2', description: "Carlos enseigne aux apprenants souhaitant progresser vers un usage plus autonome...", photo: 'carlos_ruiz.jpg' }
        ] %}

        {% for prof in professors %}
            <div class="flex flex-col md:flex-row {{ loop.index is even ? 'md:flex-row-reverse' : '' }} items-center gap-6 md:gap-12 my-12">
                <img src="{{ asset('images/professors/' ~ prof.photo) }}"
                     alt="{{ prof.name }}"
                     class="w-48 h-48 object-cover rounded-xl shadow-md">
                <div class="text-center md:text-left md:w-2/3">
                    <h2 class="text-2xl font-semibold">{{ prof.name }}</h2>
                    <h3 class="text-sm text-gray-500 mb-2">{{ prof.levels }}</h3>
                    <p class="text-gray-700 leading-relaxed">{{ prof.description }}</p>
                </div>
            </div>
            <hr class="my-8 border-gray-200">
        {% endfor %}
    </section>
{% endblock %}
