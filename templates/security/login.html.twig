{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="min-h-screen bg-[#1e293b] flex items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <!-- Titre -->
    <h1 class="text-3xl font-semibold text-center text-white">Se connecter</h1>

    <!-- Formulaire Login -->
    <form method="post" class="bg-[#1e293b] p-8 rounded-lg shadow-lg space-y-6">
      {% if error %}
        <div class="p-4 bg-[#f97316] text-white rounded-md">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <div class="space-y-2">
        <label for="username" class="block text-sm font-medium text-white">Email</label>
        <input
          type="email"
          id="username"
          name="_username"
          value="{{ last_username }}"
          autocomplete="email"
          required autofocus
          class="w-full px-4 py-3 rounded-md bg-white text-gray-900 placeholder-gray-500 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#f97316] focus:border-[#f97316]"
        />
      </div>

      <!-- Mot de passe + icône œil -->
      <div data-controller="password-visibility" class="space-y-2">
        <label for="password" class="block text-sm font-medium text-white">Mot de passe</label>

        <div class="relative">
          <input
            type="password"
            id="password"
            name="_password"
            autocomplete="current-password"
            required
            class="w-full px-4 pr-12 py-3 rounded-md bg-white text-gray-900 placeholder-gray-500 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#f97316] focus:border-[#f97316]"
            data-password-visibility-target="input"
            spellcheck="false"
          />

          <button
            type="button"
            class="absolute inset-y-0 right-3 flex items-center justify-center p-1 rounded"
            data-action="password-visibility#toggle"
            aria-label="Afficher/masquer le mot de passe"
          >
            <img
              src="{{ asset('images/password-Icon/eye-password-hide-svgrepo-com.svg') }}"
              alt=""
              aria-hidden="true"
              class="h-5 w-5"
              data-password-visibility-target="icon"
            />
            <img
              src="{{ asset('images/password-Icon/eye-password-show-svgrepo-com.svg') }}"
              alt=""
              aria-hidden="true"
              class="h-5 w-5 hidden"
              data-password-visibility-target="icon"
            />
          </button>
        </div>
      </div>

      <button
        type="submit"
        class="w-full py-3 rounded-md bg-[#f97316] text-white font-semibold hover:bg-[#ea580c] transition"
      >
        Se connecter
      </button>
    </form>

    <!-- Liens secondaires -->
    <div class="text-center space-y-2">
      <p class="text-sm text-gray-300">
        Pas encore de compte ?
        <a href="{{ path('app_register') }}" class="text-[#f97316] hover:underline">
          S'inscrire
        </a>
      </p>
      <p class="text-sm text-gray-300">
        <a href="{{ path('app_forgot_password_request') }}" class="text-[#f97316] hover:underline">
          Mot de passe oublié
        </a>
      </p>
    </div>
  </div>
</main>
{% endblock %}
