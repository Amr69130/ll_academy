{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="min-h-screen w-full bg-[#1e293b] flex items-center justify-center px-4 sm:px-6 lg:px-8 py-10 sm:py-12 lg:py-16">
  <div class="w-full max-w-sm sm:max-w-md space-y-6 sm:space-y-8">
    <!-- Titre -->
    <h1 class="text-2xl sm:text-3xl font-semibold text-center text-white">Se connecter</h1>

    <!-- Formulaire Login -->
    <form method="post" class="bg-[#1e293b] p-5 sm:p-6 lg:p-8 rounded-xl shadow-lg space-y-5 sm:space-y-6 border border-gray-600/60">
      {% if error %}
        <div class="p-3 sm:p-4 bg-[#f97316] text-white rounded-md text-sm sm:text-base">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <!-- Email -->
      <div class="space-y-2">
        <label for="username" class="block text-sm font-medium text-white">Email</label>
        <input
          type="email"
          id="username"
          name="_username"
          value="{{ last_username }}"
          autocomplete="email"
          required autofocus
          class="w-full px-4 py-3 sm:py-3.5 rounded-md bg-white text-gray-900 placeholder-gray-500 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#f97316] focus:border-[#f97316] text-sm sm:text-base"
        />
      </div>

      <!-- Mot de passe + icône œil -->
      <div data-controller="password-visibility" class="space-y-2">
        <label for="password" class="block text-sm font-medium text-white">Mot de passe</label>

        <div class="relative">
          <input
            type="password"
            id="password"
            name="_password"
            autocomplete="current-password"
            required
            class="w-full px-4 pr-12 py-3 sm:py-3.5 rounded-md bg-white text-gray-900 placeholder-gray-500 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#f97316] focus:border-[#f97316] text-sm sm:text-base"
            data-password-visibility-target="input"
            spellcheck="false"
          />

          <button
            type="button"
            class="absolute inset-y-0 right-3 flex items-center justify-center p-1.5 rounded focus:outline-none focus-visible:ring-2 focus-visible:ring-[#f97316] focus-visible:ring-offset-2 focus-visible:ring-offset-[#1e293b]"
            data-action="password-visibility#toggle"
            aria-label="Afficher/masquer le mot de passe"
          >
            <img
              src="{{ asset('images/password-Icon/eye-password-hide-svgrepo-com.svg') }}"
              alt=""
              aria-hidden="true"
              class="h-5 w-5 sm:h-6 sm:w-6"
              data-password-visibility-target="icon"
            />
            <img
              src="{{ asset('images/password-Icon/eye-password-show-svgrepo-com.svg') }}"
              alt=""
              aria-hidden="true"
              class="h-5 w-5 sm:h-6 sm:w-6 hidden"
              data-password-visibility-target="icon"
            />
          </button>
        </div>
      </div>

      <!-- Bouton submit -->
      <button
        type="submit"
        class="w-full py-3 sm:py-3.5 rounded-md bg-[#f97316] text-white font-semibold hover:bg-[#ea580c] transition focus:outline-none focus-visible:ring-2 focus-visible:ring-[#f97316] focus-visible:ring-offset-2 focus-visible:ring-offset-[#1e293b] text-sm sm:text-base"
      >
        Se connecter
      </button>
    </form>

    <!-- Liens secondaires -->
    <div class="text-center space-y-1.5 sm:space-y-2">
      <p class="text-xs sm:text-sm text-gray-300">
        Pas encore de compte ?
        <a href="{{ path('app_register') }}" class="text-[#f97316] hover:underline">S'inscrire</a>
      </p>
      <p class="text-xs sm:text-sm text-gray-300">
        <a href="{{ path('app_forgot_password_request') }}" class="text-[#f97316] hover:underline">Mot de passe oublié</a>
      </p>
    </div>
  </div>
</main>
{% endblock %}
