{% extends 'base.html.twig' %}

{% block title %}Modifier la fiche élève{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen p-6 bg-gray-50">
        <div class="w-full max-w-lg bg-white p-8 rounded shadow-md">
            <h1 class="text-3xl font-bold mb-6 text-center">Modifier la fiche élève</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.firstName) }}
            </div>

            <div>
                {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.lastName, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.lastName) }}
            </div>

            <div>
                {{ form_label(form.adress, 'Adresse', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.adress, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.adress) }}
            </div>

            <div>
                {{ form_label(form.city, 'Ville', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.city, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.city) }}
            </div>

            <div>
                {{ form_label(form.zipCode, 'Code postal', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.zipCode, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.zipCode) }}
            </div>

            <div>
                {{ form_label(form.birthDate, 'Date de naissance', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.birthDate, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.birthDate) }}
            </div>

            <div>
                {{ form_label(form.profilePicture, 'URL de la photo', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.profilePicture, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.profilePicture) }}
            </div>

            <div>
                {{ form_label(form.level, 'Niveau', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
                {{ form_widget(form.level, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.level) }}
            </div>

            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition w-full">Enregistrer</button>

            {{ form_end(form) }}

            <a href="{{ path('app_user_profile') }}" class="block mt-6 text-center text-gray-600 hover:underline">← Retour au profil</a>
        </div>
    </div>
{% endblock %}
