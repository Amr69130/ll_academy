{% extends 'base.html.twig' %}

{% block title %}Fiche de {{ student.firstName }}{% endblock %}

{% block body %}
    <div class="flex flex-col items-center p-6 bg-gray-50 min-h-screen">
        <div class="w-full max-w-2xl bg-white p-8 rounded shadow-md">
            <div class="flex items-center space-x-6 mb-6">
                {% if profilePictureUrl %}
                    <img src="{{ profilePictureUrl }}" alt="Photo de {{ student.firstName }}" class="w-32 h-32 object-cover rounded">
                {% else %}
                    <div class="w-32 h-32 bg-gray-200 flex items-center justify-center rounded text-gray-500">
                        Pas de photo
                    </div>
                {% endif %}

                <div>
                    <h1 class="text-3xl font-bold">{{ student.fullName }}</h1>
                    <p><strong>Prénom :</strong> {{ student.firstName }}</p>
                    <p><strong>Nom :</strong> {{ student.lastName }}</p>
                    <p><strong>Adresse :</strong> {{ student.address }}</p>
                    <p><strong>Ville :</strong> {{ student.city }}</p>
                    <p><strong>Code postal :</strong> {{ student.zipCode }}</p>
                    <p><strong>Date de naissance :</strong> {{ student.birthDate ? student.birthDate|date('d/m/Y') : 'N/A' }}</p>
                </div>
            </div>

            <section>
                {% if student.enrollments|length > 0 %}
                    <h2 class="mt-4 font-semibold">Inscriptions :</h2>
                    <ul class="list-disc list-inside">
                        {% for enrollment in student.enrollments %}
                            <li class="mb-4">
                                {{ enrollment.course.name }}
                                ({{ enrollment.enrollmentPeriod.title }}) –
                                <em>Status : {{ enrollment.status }}</em>
                                <p><em>Date d'inscription :</em> {{ enrollment.enrollmentDate|date('d/m/Y') }}</p>
                                <a href="{{ path('payment_new', { enrollment: enrollment.id }) }}"
                                   class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition inline-block mt-2">
                                    Payer maintenant
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Aucune inscription pour cet élève.</p>
                {% endif %}
            </section>

            <a href="{{ path('app_user_profile') }}" class="text-blue-600 hover:underline mt-6 inline-block">← Retour au profil</a>
        </div>
    </div>
{% endblock %}
