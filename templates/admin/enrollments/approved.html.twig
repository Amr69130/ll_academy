{% extends 'admin/base.html.twig' %}

{% block title %}Inscriptions à valider{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6">Inscriptions approuvée</h1>

    {% if enrollments is empty %}
        <p class="text-gray-500">Aucune inscription approuvée.</p>
    {% else %}
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
                <thead class="bg-indigo-100 text-indigo-700 uppercase text-sm">
                <tr>
                    <th class="px-6 py-3 text-left">Élève</th>
                    <th class="px-6 py-3 text-left">Cours</th>
                    <th class="px-6 py-3 text-left">Date</th>
                </tr>
                </thead>
                <tbody>
                {% for enrollment in enrollments %}
                    <tr class="border-b hover:bg-indigo-50 transition-colors">
                        <td class="px-6 py-4">{{ enrollment.student.fullName }}</td>
                        <td class="px-6 py-4">{{ enrollment.course.name }}</td>
                        <td class="px-6 py-4">{{ enrollment.enrollmentDate|date('d/m/Y') }}</td>


                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
