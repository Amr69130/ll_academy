                <button type="button"
                        class="inline-flex justify-between w-56 rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50"
                        id="dropdownButton"
                        aria-expanded="true"
                        aria-haspopup="true"
                        onclick="document.getElementById('dropdownMenu').classList.toggle('hidden')">
                    {{ selectedPeriod ? selectedPeriod.title : 'Sélectionner une période' }}
                    <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
