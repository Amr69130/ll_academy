            <div id="dropdownMenu" class="origin-top-right absolute mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden z-10">
                <div class="py-1">
                    {% for period in periods %}
                        <a href="{{ path('admin_dashboard_index', {'selectedPeriodId': period.id}) }}"
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 {% if selectedPeriod and period.id == selectedPeriod.id %}font-bold{% endif %}">
