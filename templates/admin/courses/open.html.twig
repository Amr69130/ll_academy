{% extends 'admin/base.html.twig' %}

{% block title %}Liste des cours ouverts{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-3xl font-extrabold text-gray-900 mb-8">Liste des cours ouverts</h1>

        <div class="overflow-x-auto shadow-md rounded-lg border border-gray-200">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Nom</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Niveau</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Prix (€)</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Nombre d'étudiants inscrits</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Étudiants</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Statut</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for course in openCourses %}
                    <tr class="hover:bg-gray-100 transition-colors duration-200">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ course.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ course.level }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ course.price|number_format(2, ',', ' ') }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ course.enrollments|length }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                            {% if course.enrollments|length > 0 %}
                                <ul class="list-disc ml-5">
                                    {% for enrollment in course.enrollments %}
                                        <li>{{ enrollment.student.fullName }}</li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                Aucun étudiant
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-semibold">Ouvert</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-gray-500 text-sm">Aucun cours ouvert trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
