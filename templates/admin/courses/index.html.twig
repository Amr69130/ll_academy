{% extends 'admin/base.html.twig' %}

{% block title %}Liste des cours{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-extrabold text-gray-900">Liste des cours</h1>
            <a href="{{ path('admin_courses_new') }}" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">
                Créer un nouveau cours
            </a>
        </div>

        <div class="overflow-x-auto shadow-md rounded-lg border border-gray-200">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Nom</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Niveau</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Prix (€)</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Étudiants inscrits</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Lien de paiement (à envoyer par mail lors d'une inscription)</th>

                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Statut</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
                </thead>

                <tbody class="bg-white divide-y divide-gray-200">
                {% for course in courses %}
                    <tr class="hover:bg-gray-100 transition-colors duration-200">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ course.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ course.level }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ course.price|number_format(2, ',', ' ') }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ course.enrollments|length }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ course.paymentLinkUrl }}
                        </td>

                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            {% if course.isOpen %}
                                <span class="text-green-600 font-semibold">Ouvert</span>
                            {% else %}
                                <span class="text-red-600 font-semibold">Fermé</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <a href="{{ path('admin_courses_edit', {'id': course.id}) }}"
                               class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700 transition">
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-gray-500 text-sm">Aucun cours trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
