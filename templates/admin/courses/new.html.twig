{% extends 'admin/base.html.twig' %}

{% block title %}Créer un cours{% endblock %}

{% block body %}
    <section class="max-w-4xl mx-auto px-4 py-10">
        <h1 class="text-3xl font-bold text-center mb-8">Créer un nouveau cours</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        {% for field in ['name', 'description', 'level', 'price', 'flagPicture', 'isOpen', 'paymentLinkUrl'] %}
            <div>
                {{ form_label(attribute(form, field), null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(attribute(form, field), {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2'}}) }}
                {% if form_errors(attribute(form, field)) %}
                    <p class="text-red-600 text-sm mt-1">{{ form_errors(attribute(form, field)) }}</p>
                {% endif %}
            </div>
        {% endfor %}

        <div class="text-center">
            <button type="submit" class="bg-blue-600 text-white font-semibold px-6 py-2 rounded-md hover:bg-blue-700 transition">
                Créer le cours
            </button>
        </div>

        {{ form_end(form) }}
    </section>
{% endblock %}
