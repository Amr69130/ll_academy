{% extends 'base.html.twig' %}

{% block title %}Inscrire un élève{% endblock %}

{% block body %}
    <main class="min-h-screen bg-gray-100 text-gray-900 px-4 py-8">
        <div class="max-w-2xl mx-auto space-y-6">
            <h1 class="text-2xl font-bold text-center">Inscrire {{ student.firstname }} {{ student.lastname }}</h1>

            {{ form_start(form) }}
            {{ form_row(form.enrollmentPeriod) }}
            {{ form_row(form.course) }}

            <button type="submit" class="mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                Valider l'inscription
            </button>
            {{ form_end(form) }}

            <div class="mt-6 text-center">
                <a href="{{ path('app_user_profile') }}" class="text-blue-500 hover:underline">← Retour au profil</a>
            </div>
        </div>
    </main>
{% endblock %}
