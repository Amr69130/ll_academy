{% extends 'base.html.twig' %}

{% block title %}Inscrire un élève{% endblock %}

{% block body %}
  {% form_theme form 'form_div_layout.html.twig' %}

  <main class="min-h-screen w-full bg-[#1e293b] text-white px-4 sm:px-6 lg:px-8 py-10">
    <div class="w-full max-w-xl mx-auto">
      <h1 class="text-2xl sm:text-3xl font-bold text-center mb-8">
        Inscrire {{ student.firstname }} {{ student.lastname }}
      </h1>

      {{ form_start(form, {
        attr: { class: 'bg-[#1e293b] border border-gray-600/50 rounded-xl shadow-lg p-5 sm:p-6 space-y-6' }
      }) }}

        {# --- Période d'inscription affichée en lecture seule sans border ni flèche --- #}
        {{ form_row(form.enrollmentPeriod, {
          attr: {
            class: 'w-full px-0 py-0 bg-transparent text-white text-sm sm:text-base appearance-none pointer-events-none'
          }
        }) }}

        {# --- Champ cours (sélecteur actif) --- #}
        {{ form_row(form.course, {
          label_attr: { class: 'block text-sm sm:text-base font-medium text-white' },
          attr: {
            class: 'w-full px-4 py-3 rounded-md bg-white text-gray-900 border border-gray-300 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#f97316] focus:border-[#f97316] text-sm sm:text-base'
          }
        }) }}

        {# --- Bouton submit --- #}
        {{ form_row(form.submit, {
          attr: {
            class: 'w-full inline-flex items-center justify-center px-4 py-3 sm:py-3.5 rounded-md bg-[#f97316] text-white font-semibold hover:bg-[#ea580c] transition focus:outline-none focus-visible:ring-2 focus-visible:ring-[#f97316] focus-visible:ring-offset-2 focus-visible:ring-offset-[#1e293b] text-sm sm:text-base'
          }
        }) }}

      {{ form_end(form) }}

      <div class="mt-6 text-center">
        <a href="{{ path('app_user_profile') }}" class="text-[#f97316] hover:underline">
          ← Retour au profil
        </a>
      </div>
    </div>
  </main>
{% endblock %}
