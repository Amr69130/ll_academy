{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<main class="min-h-screen w-full bg-[#1E293B] flex items-center justify-center px-4 sm:px-6 lg:px-8 py-10 sm:py-12">
  <div class="w-full max-w-sm sm:max-w-md space-y-6">
    {% for flash_error in app.flashes('reset_password_error') %}
      <div class="p-4 bg-[#f97316] text-white rounded-md text-sm sm:text-base">
        {{ flash_error }}
      </div>
    {% endfor %}

    <h1 class="text-2xl sm:text-3xl font-semibold text-center text-white">
      Réinitialiser le mot de passe
    </h1>

    {{ form_start(requestForm, {
      'attr': {
        'class': 'bg-[#1E293B] p-6 sm:p-8 rounded-lg shadow-lg space-y-5 sm:space-y-6 border border-gray-600/50'
      }
    }) }}
      {{ form_row(requestForm.email, {
        'label_attr': {'class': 'block text-sm sm:text-base font-medium text-white'},
        'attr': {
          'class': 'w-full px-4 py-3 sm:py-3.5 rounded-md bg-white text-gray-900 placeholder-gray-500 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#f97316] focus:border-[#f97316] text-sm sm:text-base'
        }
      }) }}

      <div>
        <small class="text-xs sm:text-sm text-gray-300">
          Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </small>
      </div>

      <button type="submit"
        class="w-full py-3 sm:py-3.5 rounded-md bg-[#f97316] text-white font-semibold hover:bg-[#ea580c] transition focus:outline-none focus-visible:ring-2 focus-visible:ring-[#f97316] focus-visible:ring-offset-2 focus-visible:ring-offset-[#1E293B] text-sm sm:text-base">
        Envoyer le lien de réinitialisation
      </button>
    {{ form_end(requestForm) }}

    <div class="text-center">
      <a href="{{ path('app_login') }}" class="text-sm text-[#f97316] hover:underline">
        Retour à la connexion
      </a>
    </div>
  </div>
</main>
{% endblock %}
