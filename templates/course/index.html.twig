{% extends 'base.html.twig' %}

{% block title %}Nos cours{% endblock %}

{% block body %}
    <section class="max-w-6xl mx-auto px-4 py-10">
        <h1 class="text-3xl font-bold text-center mb-12">Nos cours</h1>

        {% for course in courses %}
            <div class="flex flex-col md:flex-row {{ loop.index is even ? 'md:flex-row-reverse' : '' }} items-center gap-6 md:gap-12 my-12">
                <img src="{{ asset('images/courses/' ~ course.flagPicture) }}"
                     alt="{{ course.name }}"
                     class="w-48 h-48 object-cover rounded-xl shadow-md">
                <div class="text-center md:text-left md:w-2/3">
                    <h2 class="text-2xl font-semibold">{{ course.name }}</h2>
                    <h3 class="text-sm text-gray-500 mb-2">Niveau : {{ course.level }}</h3>
                    <p class="text-gray-700 leading-relaxed">{{ course.description }}</p>
                    <p class="mt-2 text-sm text-gray-500"> Tarif : {{ course.price }} â‚¬</p>
                </div>
            </div>
            <hr class="my-8 border-gray-200">
        {% endfor %}
    </section>
{% endblock %}
