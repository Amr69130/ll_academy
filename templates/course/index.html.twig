{% extends 'base.html.twig' %}

{% block title %}Nos cours de langue{% endblock %}

{% block body %}
    <section class="max-w-7xl mx-auto px-6 py-16">
        <h1 class="text-4xl md:text-5xl font-extrabold text-center text-blue-800 mb-14">
             Nos cours de langue
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <!-- Anglais -->
            <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-2xl transition">
                <div class="flex items-center gap-4 mb-4">
                    <img src="{{ asset('images/courses/anglais.png') }}" alt="Drapeau Anglais" class="w-10 h-10 rounded-full object-cover">
                    <h2 class="text-2xl font-semibold text-gray-800">Anglais</h2>
                </div>
                <p class="text-gray-600 mb-3 font-medium">Niveaux : <strong>A1 → B2</strong></p>
                <ul class="text-gray-700 mb-3 list-disc list-inside">
                    <li><strong>Compétences visées :</strong> Expression orale, écrite, compréhension et conversation.</li>
                    <li><strong>Durée :</strong> 10 séances de 1h30 chacune.</li>
                    <li><strong>Méthode :</strong> Immersive et interactive avec support audio-visuel.</li>
                    <li><strong>Exemples de contenus :</strong> Dialogues pratiques, exercices de grammaire, jeux interactifs.</li>
                    <li><strong>Public :</strong> Enfants, adolescents et adultes.</li>
                </ul>
            </div>

            <!-- Italien -->
            <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-2xl transition">
                <div class="flex items-center gap-4 mb-4">
                    <img src="{{ asset('images/courses/italien.png') }}" alt="Drapeau Italien" class="w-10 h-10 rounded-full object-cover">
                    <h2 class="text-2xl font-semibold text-gray-800">Italien</h2>
                </div>
                <p class="text-gray-600 mb-3 font-medium">Niveaux : <strong>A1 → B2</strong></p>
                <ul class="text-gray-700 mb-3 list-disc list-inside">
                    <li><strong>Compétences visées :</strong> Expression orale et écrite, compréhension de dialogues, conversation.</li>
                    <li><strong>Durée :</strong> 8 séances de 2h chacune.</li>
                    <li><strong>Méthode :</strong> Culturelle et immersive, utilisation de films et musiques italiennes.</li>
                    <li><strong>Exemples de contenus :</strong> Jeux de rôle, lectures courtes, dialogues pratiques.</li>
                    <li><strong>Public :</strong> Adolescents et adultes.</li>
                </ul>
            </div>

            <!-- Arabe -->
            <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-2xl transition">
                <div class="flex items-center gap-4 mb-4">
                    <img src="{{ asset('images/courses/arabe.png') }}" alt="Drapeau Arabe" class="w-10 h-10 rounded-full object-cover">
                    <h2 class="text-2xl font-semibold text-gray-800">Arabe</h2>
                </div>
                <p class="text-gray-600 mb-3 font-medium">Niveaux : <strong>A1 → B2</strong></p>
                <ul class="text-gray-700 mb-3 list-disc list-inside">
                    <li><strong>Compétences visées :</strong> Lecture, écriture, expression orale et compréhension.</li>
                    <li><strong>Durée :</strong> 12 séances de 1h30 chacune.</li>
                    <li><strong>Méthode :</strong> Approche communicative avec exercices d’écriture et oral.</li>
                    <li><strong>Exemples de contenus :</strong> Exercices d’écriture, dialogues quotidiens, vidéos culturelles.</li>
                    <li><strong>Public :</strong> Adolescents et adultes.</li>
                </ul>
            </div>

            <!-- Espagnol -->
            <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-2xl transition">
                <div class="flex items-center gap-4 mb-4">
                    <img src="{{ asset('images/courses/espagnol.png') }}" alt="Drapeau Espagnol" class="w-10 h-10 rounded-full object-cover">
                    <h2 class="text-2xl font-semibold text-gray-800">Espagnol</h2>
                </div>
                <p class="text-gray-600 mb-3 font-medium">Niveaux : <strong>A1 → B2</strong></p>
                <ul class="text-gray-700 mb-3 list-disc list-inside">
                    <li><strong>Compétences visées :</strong> Conversation, lecture, écriture et compréhension.</li>
                    <li><strong>Durée :</strong> 10 séances de 2h chacune.</li>
                    <li><strong>Méthode :</strong> Ludique et immersive avec activités culturelles hispanophones.</li>
                    <li><strong>Exemples de contenus :</strong> Dialogues pratiques, jeux interactifs, lectures courtes.</li>
                    <li><strong>Public :</strong> Enfants, adolescents et adultes.</li>
                </ul>
            </div>
        </div> <!-- fin grid -->
    </section>
{% endblock %}
