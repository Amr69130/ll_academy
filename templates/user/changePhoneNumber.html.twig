{% extends 'base.html.twig' %}

{% block title %}Modifier mon numéro de téléphone{% endblock %}

{% block body %}
<main class="min-h-screen bg-[#1e293b] flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-md space-y-6">
    <h1 class="text-2xl font-semibold text-white text-center">Modifier mon numéro de téléphone</h1>

    {{ form_start(resetNumber, { attr: { class: 'bg-white rounded-lg shadow p-6 space-y-4' } }) }}
      {{ form_row(resetNumber.phoneNumber, {
        'label': 'Téléphone',
        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
        'attr': {
          'class': 'w-full px-4 py-3 rounded-md bg-white text-gray-900 placeholder-gray-500 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#f97316] focus:border-[#f97316]'
        }
      }) }}

      <button type="submit" class="w-full py-3 rounded-md bg-[#f97316] text-white font-semibold hover:bg-[#ea580c] transition">
        Modifier
      </button>
      
    {{ form_end(resetNumber) }}
  </div>
</main>
{% endblock %}
