{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
  <main class="min-h-screen bg-[#1e293b] text-white px-4 py-8">
    <div class="max-w-4xl mx-auto space-y-6">
      <h1 class="text-3xl font-bold text-center">Mon Profil</h1>

      <section class="bg-white text-gray-800 p-6 rounded-lg shadow">
        <h2 class="text-2xl font-semibold mb-4">Informations du parent</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div class="space-y-2">
            <p><strong>Nom :</strong> {{ app.user.firstname }}</p>
            <p class="break-all"><strong>Email :</strong> {{ app.user.email }}</p>
          </div>

          <div class="space-y-2">
            <p><strong>Téléphone :</strong>
              {% if app.user.phonenumber %}
                {{ app.user.phonenumber }}
              {% else %}
                <span class="text-red-600 font-medium ml-1">À remplir</span>
              {% endif %}
            </p>

            {% set has_all_adress = app.user.billingAddress and app.user.billingCity and app.user.billingZipCode %}
            <p class="break-words">
              <strong>Adresse :</strong>
              {% if has_all_adress %}
                {{ app.user.billingaddress }}
              {% else %}
                <span class="text-red-600 font-medium ml-1">À remplir</span>
              {% endif %}
            </p>
          </div>
        </div>
      </section>

      {% if not app.user.isVerified %}
        <section class="bg-white text-black p-6 rounded-lg shadow text-center">
          <p class="mb-4">Pour accéder pleinement à votre compte, veuillez confirmer votre adresse e-mail.</p>
          <a href="{{ path('app_user_verify_mail') }}" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
            Recevoir le lien de confirmation
          </a>
        </section>
      {% else %}
        <section class="flex justify-center gap-3">
          <a href="{{ path('student_new') }}" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
            Créer une fiche élève
          </a>
        </section>

        {% if students is not empty %}
          <section class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
            <h2 class="col-span-full text-xl font-bold text-white">Mes enfants</h2>
        {% for student in students %}
  <div class="bg-white text-gray-800 p-5 rounded-xl shadow border border-gray-100 flex flex-col items-center text-center gap-4">
    <!-- Nom + prénom -->
    <p class="text-lg font-semibold">
      {{ student.firstname }} {{ student.lastname }}
    </p>

    <!-- Liens infos / supprimer -->
    <div class="flex gap-6 text-sm">
      <a href="{{ path('student_edit', {id: student.id}) }}" class="text-yellow-600 hover:underline">
        Informations
      </a>
      <form method="post" action="{{ path('student_delete', {id: student.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.id) }}">
        <button type="submit" class="text-red-600 hover:underline">
          Supprimer
        </button>
      </form>
    </div>

{% if existingEnrollment == true %}
  <div class="w-full text-center">
    <div class="rounded-lg bg-green-600 px-6 py-2 text-white font-medium text-sm sm:text-base shadow whitespace-nowrap inline-block">
      {{ period }} – {{ course }}
    </div>
  </div>
{% else %}
  <a href="{{ path('student_enroll', {id: student.id}) }}"
     class="inline-flex items-center justify-center rounded-lg bg-green-600 px-6 py-2 text-white font-medium shadow hover:bg-green-700 transition text-sm sm:text-base whitespace-nowrap w-full">
    S'inscrire pour 2025–2026
  </a>
{% endif %}


{% endfor %}



          </section>
        {% else %}
          <p class="text-gray-400 text-center">Aucun enfant inscrit.</p>
        {% endif %}
      {% endif %}

      <form method="post" action="{{ path('app_logout') }}" class="mt-8 text-center">
        <a href="{{ path('app_user_profile_settings') }}"
           class="bg-[#f97316] text-white px-4 py-2 rounded hover:bg-[#ea580c] transition mr-5">
          Paramètres
        </a>
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
          Se déconnecter
        </button>
      </form>

    </div>
  </main>
{% endblock %}
